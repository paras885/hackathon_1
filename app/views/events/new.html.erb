<!--<div class="Create_Event">-->
<% provide(:title, 'Create Event') %>
<h1>Create Event</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

<%= form_for :event do |f| %>
	<%#= render 'shared/error_message_event_creation' %>
	<p>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :description %>
		<%= f.text_field :description %>
	</p>

	<p>
		<%= f.label :start_date_time %>
		<%= f.text_field :start_date_time %>
		<%#= f.time_select :start_date_time, :ampm => true %>
		<%#= f.date_select(:start_date_time, :prompt => { :day => 'Day', :month => 'Month', :year => 'Year' }) %> 
	</p>

	<p>
		<%= f.label :end_date_time %>
		<%= f.text_field :end_date_time %>
	</p>	

	<p>
		<%= f.label :city %>
		<%= f.text_field :city %>
	</p>

	<p>
		<%= f.label :address %>
		<%= f.text_field :address %>
	</p>
	
	<p>
		<%= f.label :event_creater %>
		<%= f.text_field :event_creater %>
	</p>

	<p>
	<%= f.label :all_tags %>
	<%= f.text_field :all_tags, placeholder: "Tags separated with comma" %>
	</p>
	<p>
		<%= f.submit 'Create Event', class: "btn btn-primary", controller: 'events', action: 'create' %>
	</p>
<% end %>
  </div>
</div>

	<% if false %>	
	<% if @event.error.any? %>
		<ul class = "Creation_error">
			<% for message_error in @event.errors.full_messages %>
				<li> <%= message_error %> </li>
			<% end %>
		</ul>
	<% end %>
	<% end %>
</div>
